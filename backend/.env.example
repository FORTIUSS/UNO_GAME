# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Firestore Configuration
FIRESTORE_DATABASE_ID=your-database-id

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# Game Configuration
MAX_PLAYERS_PER_ROOM=10
MIN_PLAYERS_TO_START=2
INITIAL_HAND_SIZE=7
GAME_INACTIVITY_TIMEOUT=300000
PLAYER_INACTIVITY_TIMEOUT=60000

# Matchmaking Configuration
MATCHMAKING_TIMEOUT=30000
MAX_CONCURRENT_ROOMS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://uno-game.com

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_BOT_PLAYERS=false
ENABLE_CHAT=true
ENABLE_SPECTATOR_MODE=false

# Analytics
ENABLE_ANALYTICS=true
